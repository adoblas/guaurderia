{{extend 'layout.html'}}
<h1>My blog</h1>

{{ for x in rows: }}
<div class='row'>
    <img src="{{=x.blog_image}}" alt='Blog image'>
    <div>
        <p class='lead'>
            <b><a href='{{=x.blog_url}}' target='_new'>
                {{=x.blog_title }}</a></b>
        </p>
        <p><b>Category: </b> {{=x.blog_category}}</p>
        <p>{{=x.blog_details}}</p>
        <p>{{=x.blog_posted}}</p>
    </div>
</div>
{{ pass }}
